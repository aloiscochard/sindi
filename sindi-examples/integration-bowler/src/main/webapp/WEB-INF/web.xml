<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

  <display-name>Bowler Sindi</display-name>

  <filter>
    <filter-name>bowler</filter-name>
    <filter-class>org.bowlerframework.http.BowlerFilter</filter-class>
    <init-param>
      <param-name>bootstrapClass</param-name>
      <param-value>sindi.examples.integration.bowler.Bootstrap</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>bowler</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

</web-app>
